{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "isolatedModules": false,
    "paths": {
      "~/*": ["./*"],
      "~/v1/*": ["./v1/*"],
      "~/icons": ["./v1/icons"],
      "~/hooks/*": ["./v1/hooks/*"]
    },
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [".", "v1", "v1/icons", "v1/hooks"],
  "exclude": ["dist", "build", "node_modules"]
}
