{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "isolatedModules": false,
    "paths": {
      "~/*": ["./*"],
      "~/v1/*": ["./v1/*"],
      "~/icons/*": ["./icons/*"],
      "~/hooks/*": ["./hooks/*"]
    },
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [".", "v1", "icons", "hooks"],
  "exclude": ["dist", "build", "node_modules"]
}
