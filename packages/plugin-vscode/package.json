{
  "name": "apsara-for-vscode",
  "displayName": "Apsara for VSCode",
  "version": "0.1.0",
  "private": true,
  "description": "VS Code extension for @raystack/apsara",
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=20"
  },
  "keywords": ["apsara", "raystack"],
  "categories": ["Other"],
  "activationEvents": ["onLanguage:css", "onLanguage:scss"],
  "main": "./dist/client.js",
  "contributes": {
    "configuration": {
      "title": "Apsara for VSCode",
      "type": "object",
      "properties": {
        "apsaraForVSCode.triggerCharacters": {
          "type": "string",
          "default": "--",
          "description": "Trigger characters for Apsara for VSCode completion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "pnpm clean && node esbuild.js --production",
    "dev": "pnpm clean && node esbuild.js --watch",
    "clean": "rimraf dist",
    "package": "pnpm build && vsce package --no-dependencies --allow-missing-repository"
  },
  "dependencies": {
    "@raystack/apsara": "^0.46.0",
    "color": "^5.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.5",
    "rimraf": "^6.0.1"
  }
}
