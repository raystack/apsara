{
  "name": "apsara-for-vscode",
  "displayName": "Apsara for VSCode",
  "publisher": "Raystack",
  "version": "0.1.1",
  "private": true,
  "description": "VS Code extension for @raystack/apsara",
  "license": "SEE LICENSE IN LICENSE.md",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/raystack/apsara.git"
  },
  "homepage": "https://github.com/raystack/apsara/blob/main/packages/plugin-vscode/README.md",
  "bugs": {
    "url": "https://github.com/raystack/apsara/issues"
  },
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=22"
  },
  "keywords": ["apsara", "raystack"],
  "categories": ["Programming Languages", "Snippets", "Other"],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/client.js",
  "contributes": {
    "configuration": {
      "title": "Apsara for VSCode",
      "type": "object",
      "properties": {
        "apsaraForVSCode.triggerCharacters": {
          "type": "string",
          "default": "--",
          "description": "Trigger characters for Apsara for VSCode completion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "pnpm clean && node esbuild.js --production",
    "dev": "pnpm clean && node esbuild.js --watch",
    "clean": "rimraf dist",
    "package": "pnpm build && vsce package --no-dependencies --baseImagesUrl 'https://raw.githubusercontent.com/raystack/apsara/refs/heads/main/packages/plugin-vscode'"
  },
  "dependencies": {
    "@raystack/apsara": "^0.46.0",
    "color": "^5.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.5",
    "rimraf": "^6.0.1"
  }
}
